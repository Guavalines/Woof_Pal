



<div class="list-group-item mb-1 border-0 bg-none py-3 rounded-pill">
  <div class="d-flex w-100 justify-content-between">
    <div class="text-center">
      <div>
        <%= appointment.scheduled_on.strftime("%b") %>
      </div>
      <div class="fs-2">
        <%= appointment.scheduled_on.strftime("%d") %>
      </div>
    </div>

    <div class="flex-grow-1 px-3">
      <small class="<%= appointment.soon? ? 'text-danger' : 'text-muted' %>">
        in <%= distance_of_time_in_words_to_now(appointment.scheduled_on) %>
      </small>
      <h3 class="h2 mb-0"><%= appointment.title %></h3>
    </div>

    <div class="d-flex align-items-center">
      <%= image_tag "#{appointment.title.downcase}.png", class: "img-fluid", width: 48 %>
    </div>
  </div>
</div>
