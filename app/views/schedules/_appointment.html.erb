



<div class="list-group-item mb-1 border-0 bg-light py-3 px-5 rounded-pill">
  <div class="d-flex w-100 justify-content-between">
    <div class="text-center pe-3 border-end d-flex align-items-center">
      <%= link_to new_appointment_reschedule_path(appointment) do %>
        <div>
          <%= appointment.scheduled_on.strftime("%b") %>
        </div>
        <div class="fs-2">
          <%= appointment.scheduled_on.strftime("%d") %>
        </div>
      <% end %>
    </div>

    <div class="flex-grow-1 px-3">
      <small class="<%= appointment.soon? ? 'text-danger' : 'text-muted' %>">
        in <%= distance_of_time_in_words_to_now(appointment.scheduled_on) %>
      </small>
      <h3 class="h2 mb-1"><%= appointment.title %></h3>
      <p class="text-muted mb-0"><%= appointment.tip %> <i class="fas fa-info-circle"></i></p>
    </div>

    <div class="d-flex ms-3 align-items-center flex-shrink-0">
      <%= image_tag "#{appointment.title.downcase}.png", class: "img-fluid", width: 48 %>
    </div>
  </div>
</div>
