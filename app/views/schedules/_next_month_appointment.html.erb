<div class="list-group-item mb-1 border-top py-3 px-5 rounded-pill bg-light">
  <div class="d-flex w-100 justify-content-between">
    <div class="text-center pe-3 border-end">
      <%= link_to new_appointment_reschedule_path(appointment), class: "text-decoration-none appointment-links" do %>
        <div class="small">
          <%= appointment.scheduled_on.strftime("%b") %>
        </div>
        <div class="fs-5">
          <%= appointment.scheduled_on.strftime("%d") %>
        </div>
      <% end %>
    </div>

    <div class="flex-grow-1 px-3">
      <small class="<%= appointment.soon? ? 'text-danger' : 'text-muted' %>">
        in <%= distance_of_time_in_words_to_now(appointment.scheduled_on) %>
      </small>
      <h3 class="h6 mb-0"><%= appointment.title %></h3>
    </div>

    <div class="d-flex align-items-center">
      <%= image_tag "#{appointment.title.downcase}.png", class: "img-fluid", width: 32 %>
    </div>
  </div>
</div>
