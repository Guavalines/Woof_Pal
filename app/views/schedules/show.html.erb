





<div class="animate__animated animate__lightSpeedInLeft">
  <div class="container py-5">
    <div class="row justify-content-center mb-2">
      <div class="col-10">

        <div class="text-end">
            <button type="button" class="btn btn-sm btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#exampleModalCenter1">
          Vets near me
        </button>
        <button type="button" class="btn btn-sm btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#exampleModalCenter2">
         Groomers near me
        </button>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3 text-center">
        <div class="sticky-top">
          <%= render "schedules/dog", schedule: @schedule %>
        </div>
      </div>
      <div class="col-7">
        <div class="list-group">
          <% @schedule.next_appointments.each do |appointment| %>
            <%= render "schedules/appointment", appointment: appointment %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>


<div class="modal" tabindex="-1" id="exampleModalCenter1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Vets near me</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <iframe
          width="450"
          height="250"
          frameborder="0" style="border:0"
          referrerpolicy="no-referrer-when-downgrade"
          src="https://www.google.com/maps/embed/v1/search?key=<%= ENV["GOOGLE_API_KEY"] %>&q=Veterinaria near Condesa in CDMX"
          allowfullscreen>
        </iframe>

      </div>
    </div>
  </div>
</div>

<div class="modal" tabindex="-1" id="exampleModalCenter2">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Groomers near me</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <iframe
          width="450"
          height="250"
          frameborder="0" style="border:0"
          referrerpolicy="no-referrer-when-downgrade"
          src="https://www.google.com/maps/embed/v1/search?key=<%= ENV["GOOGLE_API_KEY"] %>&q=estetica canina near Condesa in CDMX"
          allowfullscreen>
        </iframe>

      </div>
    </div>
  </div>
</div>

